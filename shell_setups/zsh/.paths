function add_to_path {
    [ -d $1 ] || eval 'print_msg "Path $1 does not exist, skipping..." ; return 1'
    case ":$PATH:" in
        *:"$1":*) ;;
        *) PATH="$PATH:$1" ;;
    esac
}

function source_path {
    [ -f $1 ] || eval 'print_msg "Path $1 does not exist or is not a directory, skipping..." ; return 1'
    source $1
}

